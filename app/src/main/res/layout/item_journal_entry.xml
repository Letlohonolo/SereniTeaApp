<?xml version="1.0" encoding="utf-8"?>
<!--The implementation uses the cardview layout as
recommended in the Android Developer documentation (Android Developers, 2024)
Link: https://developer.android.com/develop/ui/views/layout/cardview -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardBackgroundColor="@color/ThirdBackground">

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cardTitle"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My productive morning"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtPreview"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="I woke up earlier than ..."
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtTime"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/08"
            android:textColor="@color/black"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>