<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/Background"
    android:gravity="center"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/SecondaryBackground"
        app:title="Home"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">

            <!--User information edit section-->
            <EditText
                android:id="@+id/settingsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edit Name"/>

            <EditText
                android:id="@+id/settingsEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Edit Email"/>

            <EditText
                android:id="@+id/settingsPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Edit Phone"/>

            <Button
                android:id="@+id/btnSaveInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Information"
                android:backgroundTint="@color/PrimaryButton"
                android:textColor="@color/black"
                android:padding="10dp"/>

            <!--Language Toggle section-->
            <TextView
                android:text="Language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="bold"/>

            <Switch
                android:id="@+id/switchLanguage"
                android:text="Switch Language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--Notifications section-->
            <TextView
                android:text="Notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="bold"/>

            <Switch
                android:id="@+id/switchNotifications"
                android:text="Switch Notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--Themes section-->
            <TextView
                android:text="App Theme"
                android:textStyle = "bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <Switch
                android:id="@+id/switchTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dark Mode"/>

            <!--Themes section-->
            <TextView
                android:text="Biometrics"
                android:textStyle = "bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <Switch
                android:id="@+id/switchBiometrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Switch Biometrics"/>

            <!--Feedback section-->
            <Button
                android:id="@+id/btnFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Feedback"
                android:backgroundTint="@color/PrimaryButton"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/SecondaryBackground"
        app:menu="@menu/navigation"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"/>
</androidx.drawerlayout.widget.DrawerLayout>