<?xml version="1.0" encoding="utf-8"?>
<!--Code Attribution:
    Navigation View
    using side navigation menu (Android Developers, 2024)
    Link: https://developer.android.com/reference/com/google/android/material/navigation/NavigationView -->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrendsActivity"
    android:background="@color/Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/SecondaryBackground"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Trends"
        app:titleTextColor="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trends"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/textBackground"
            android:paddingBottom="24dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Code Attribution:
            MPAndroidChart Library
            Visual data representation using the MPAndroidChart library (Jahoda, 2024)
            Link: https://github.com/PhilJay/MPAndroidChart-->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:backgroundTint="@color/Background" />

        </LinearLayout>
        <Button
            android:id="@+id/SummaryBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Monthly summary"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/PrimaryButton"
            android:textColor="@color/black"/>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/SecondaryBackground"
        app:menu="@menu/navigation"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"/>
</androidx.drawerlayout.widget.DrawerLayout>